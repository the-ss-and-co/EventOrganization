<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vendor.AB.Activity.PaymentActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="6dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/back_arrw"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 3"
                    android:layout_toRightOf="@+id/back_arrw"
                    android:layout_centerVertical="true"
                    android:textSize="19dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/quicksand_bold"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Info"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="provide your business bank account to collect the money"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_black"
                android:layout_marginTop="30dp">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Name"
                android:layout_marginTop="38dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/quicksand_bold"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="bank name"

                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:singleLine="true"
                android:textSize="16dp"
                android:focusableInTouchMode="true"
                android:defaultFocusHighlightEnabled="false"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="15dp"
                android:textColorHint="@color/lightblank"
                android:background="@drawable/edittextbackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/quicksand_bold"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="account number"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:singleLine="true"
                android:textSize="16dp"
                android:focusableInTouchMode="true"
                android:defaultFocusHighlightEnabled="false"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="15dp"
                android:textColorHint="@color/lightblank"
                android:background="@drawable/edittextbackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IFSC Code"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/quicksand_bold"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IFSC code"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:singleLine="true"
                android:textSize="16dp"
                android:focusableInTouchMode="true"
                android:defaultFocusHighlightEnabled="false"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="15dp"
                android:textColorHint="@color/lightblank"
                android:background="@drawable/edittextbackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Holder's Name"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/quicksand_bold"
                android:singleLine="true"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="account holder's name"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:singleLine="true"
                android:textSize="16dp"
                android:focusableInTouchMode="true"
                android:defaultFocusHighlightEnabled="false"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="15dp"
                android:textColorHint="@color/lightblank"
                android:background="@drawable/edittextbackground"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingVertical="9dp"
                android:paddingBottom="5dp"
                android:paddingHorizontal="33dp"
                android:background="@drawable/rcr"/>
            </RelativeLayout>

        </LinearLayout>
        





    </LinearLayout>

</ScrollView>


</RelativeLayout>