<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/tt"
        android:fontFamily="@font/quicksand"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/red"
        android:textSize="8dp"
        android:textStyle="bold"
        android:text="SET SERVICE LOCATION">

    </TextView>
    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tt"
        android:fontFamily="@font/quicksand"
        android:layout_centerHorizontal="true"
        android:dropDownWidth="match_parent"
        android:drawablePadding="14dp"

        android:drawableLeft="@drawable/left_arr"
        android:hint="Search by area"

       />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10px"
android:id="@+id/location"
        android:layout_below="@+id/autoCompleteTextView">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="10px"
            android:src="@drawable/curectlocation"
            android:backgroundTint="#807777"
            />
        <TextView
            android:id="@+id/getlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Locaton"
            android:textSize="14dp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginLeft="15dp"
            android:textColor="#000"

            />
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/btn_save"
        android:layout_below="@+id/location"
        android:layout_marginTop="85dp"
        android:background="@drawable/rcr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textColor="@color/white"
            android:paddingTop="8dp"
            android:textSize="17dp"
            android:fontFamily="@font/quicksand_bold"
            android:paddingBottom="8dp"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"

            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="powered by"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:src="@drawable/google"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>


</RelativeLayout>