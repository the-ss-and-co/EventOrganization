<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <android.support.v7.widget.CardView
       android:id="@+id/tab_card"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="1dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="60dp">
           <ImageView
               android:id="@+id/back_pressed"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_arrow_back_black_24dp"
               android:layout_marginStart="10dp"
               android:layout_centerVertical="true"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/privacy_policy"
               android:textSize="23sp"
               android:textColor="#000000"
               android:layout_toEndOf="@+id/back_pressed"
               android:layout_centerVertical="true"
               android:layout_marginStart="15dp"/>
       </RelativeLayout>
   </android.support.v7.widget.CardView>

    <TextView
        android:layout_below="@+id/tab_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_n_and_typesetting_industry_lorem_ipsum_has_been_the_n_industry_s_standard_dummy_text_ever_since_the_1500s_n_whne_an_unknown_printer_took_a_gallery_of_type_and_n_scrambled_it_to_make_a_type_specimen_book"
        android:textSize="14sp"
        android:textColor="#000000"
        />
</RelativeLayout>