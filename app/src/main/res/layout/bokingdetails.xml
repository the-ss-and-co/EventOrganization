<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/tab_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boking_details"
                android:textSize="20sp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/back"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/cell_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/call"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recycler"
        android:layout_below="@+id/tab_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/due_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/due_amount"
        android:textColor="@color/red"
        android:layout_below="@+id/item_recycler"
        android:textSize="18sp"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_23_000"
        android:textColor="@color/red"
        android:layout_below="@+id/item_recycler"
        android:layout_toRightOf="@+id/due_amount"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginStart="15dp"/>

    <RelativeLayout
        android:id="@+id/paid_text"
        android:layout_below="@+id/due_amount"
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/paid_back">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paid_am"
            android:textSize="15sp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/green"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/organo"
        android:layout_below="@+id/paid_text"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/organo_mentor"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/quicksand_bold"
        />
    <TextView
        android:id="@+id/destination_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination_address"
        android:fontFamily="@font/quicksand_bold"
        android:layout_below="@+id/organo"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/current_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carret_street_kolkata_700107_west_bengal"
        android:layout_below="@+id/destination_add"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/quicksand_bold"
        />
    <TextView
        android:id="@+id/price_breakup"
        android:layout_below="@+id/current_address"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_breakup"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="28dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/price_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_breakup"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
    </android.support.v7.widget.RecyclerView>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/price_recycler"
        android:background="@color/light_black"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_bill"
        android:layout_below="@+id/view"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/_36_000"
        android:layout_below="@+id/view"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:fontFamily="@font/quicksand_bold"/>
</RelativeLayout>