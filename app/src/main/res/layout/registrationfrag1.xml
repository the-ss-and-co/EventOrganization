<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="1dp">
            <ImageView
                android:id="@+id/back_arrw"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_1"
                android:layout_toEndOf="@+id/back_arrw"
                android:textSize="20sp"
                android:fontFamily="@font/quicksand_bold"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_marginStart="7dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_below="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp">
        <TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owner_s_name"
            android:textSize="16sp"
            android:textColor="#000000"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/yourname"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/owner"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_oval"
            android:hint="@string/your_name"
            android:paddingStart="5dp"
            tools:ignore="RtlSymmetry" />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_name"
            android:layout_below="@+id/yourname"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/edt_company"
            android:layout_below="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/company_name"
            android:paddingStart="5dp"
            tools:ignore="RtlSymmetry"
            android:background="@drawable/edit_text_oval"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/company_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_address"
            android:layout_below="@+id/edt_company"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/edt_adrress"
            android:layout_below="@+id/company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="5dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_oval"
                android:hint="@string/company_address"
                android:paddingStart="5dp"
                tools:ignore="RtlSymmetry" />

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_adrress"
            android:layout_marginTop="15dp"
            android:text="@string/city"
            android:textSize="16sp"
            android:textColor="#000000"/>
        <android.support.v7.widget.CardView
            android:id="@+id/edt_city"
            android:layout_below="@+id/city"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_oval"
            android:hint="@string/city"
            android:paddingStart="5dp"
            tools:ignore="RtlSymmetry" />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pin"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_below="@+id/edt_city"
            android:layout_marginTop="15dp"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/edt_pin"
            android:layout_below="@+id/pin"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_oval"
                android:hint="@string/pin"
                android:paddingStart="5dp"
                tools:ignore="RtlSymmetry" />

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/state"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@+id/edt_pin"
            android:layout_marginTop="15dp"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/edt_state"
            android:layout_below="@+id/state"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_oval"
                android:hint="@string/state"
                android:paddingStart="5dp"
                />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/landmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/landmark"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@+id/edt_state"
            android:layout_marginTop="15dp"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/edt_landmark"
            android:layout_below="@+id/landmark"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="5dp"
                android:background="@drawable/edit_text_oval"
                android:hint="@string/landmark"
                tools:ignore="RtlSymmetry" />
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/next"
            android:layout_below="@+id/edt_landmark"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/next"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/edittext_back_round"/>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>