<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ServiceActivity">

    <TextView
        android:id="@+id/Choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_service"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
    <RelativeLayout
        android:id="@+id/Services"
        android:layout_below="@+id/Choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <LinearLayout
                android:id="@+id/service1"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:background="@drawable/servicebackground"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_home_black_24dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/service" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_type_1"
                android:textSize="17sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/service2"
            android:layout_below="@+id/service1"
            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/servicebackground"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_spoon"
                android:contentDescription="@string/service" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_type_2"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:textSize="17sp"
                android:layout_marginLeft="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Service3"
            android:layout_below="@+id/service2"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/servicebackground">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_photo_camera_black_24dp"
                android:contentDescription="@string/service" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_type_3"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>