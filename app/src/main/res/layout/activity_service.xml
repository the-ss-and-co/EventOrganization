<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ServiceActivity">


    <TextView
        android:id="@+id/Choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/choose_a_service"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/Services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Choose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <android.support.v7.widget.CardView
            android:id="@+id/service1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="57dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_home_black_24dp"
                    android:contentDescription="@string/service" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="19dp"
                    android:layout_marginLeft="1dp"
                    android:fontFamily="@font/quicksand"
                    android:text="@string/service_type_1"
                    android:textColor="#000000"
                    android:textSize="22sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/service2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service1"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="57dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_spoon"
                    android:contentDescription="@string/service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="19dp"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginLeft="15dp"
                    android:text="@string/service_type_2"
                    android:textColor="#000000"
                    android:textSize="22sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/Service3"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="57dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_photo_camera_black_24dp"
                    android:contentDescription="@string/service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="19dp"
                    android:text="@string/service_type_3"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    tools:fontFamily="@font/quicksand" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>