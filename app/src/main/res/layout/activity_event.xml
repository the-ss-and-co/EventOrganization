<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EventActivity">

    <TextView
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_an_event"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <ScrollView
        android:id="@+id/eventitem"
        android:layout_below="@+id/event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/eventview"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </android.support.v7.widget.RecyclerView>

    </ScrollView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_below="@+id/eventitem"
        android:layout_width="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/otherevent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/eventtag"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="@drawable/buttonsave"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/Go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toStartOf="@+id/eventtag"

            >
            <EditText
                android:id="@+id/Eventinput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/event"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:background="@drawable/edittextback"
                tools:ignore="RtlSymmetry"
                 />
        </RelativeLayout>



    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>