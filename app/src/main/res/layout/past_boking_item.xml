<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
         >
            <LinearLayout
                android:id="@+id/aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOKING ID : "
                    android:fontFamily="@font/quicksand"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OWNDHFTW"
                    android:fontFamily="@font/quicksand"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <View
                android:layout_below="@+id/aa"
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_black"></View>
            <RelativeLayout
                android:layout_below="@+id/v1"
                android:id="@+id/goto_bokingdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/festive_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/festive_calender"
                android:textSize="18sp"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marriage"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/red"
                />
            <TextView
                android:id="@+id/date_festive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jan_26_2018"
                android:textColor="@color/black"
                android:layout_below="@+id/festive_calender"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/quicksand"
                />
            <TextView
                android:id="@+id/event_house"
                android:layout_below="@+id/date_festive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_house"
                android:textColor="@color/black"
                android:layout_marginTop="18dp"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand"
                />
            <View
                android:id="@+id/single_view"
                android:layout_below="@+id/event_house"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_black"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_below="@+id/single_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_payment"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand"
                />
            <TextView
                android:id="@+id/total_payment"
                android:layout_below="@+id/single_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3600"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/paid"
                android:layout_below="@+id/total_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paid"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:padding="3.5dp"
                android:background="@color/green"/>
            <View
                android:id="@+id/second_view"
                android:layout_below="@+id/paid"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_black"
                android:layout_marginTop="8dp"
                />
                <RelativeLayout
                    android:layout_below="@+id/second_view"
                    android:id="@+id/rel_due_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">



                    <TextView
                        android:id="@+id/txt_due"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/quicksand"
                        android:text="Due"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/lll"
                        android:layout_below="@+id/txt_due"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/anvd">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Cash"

                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="3dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/down_arrow" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/paynow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pay Now"
                        android:textColor="@color/black"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/squershape"
                        android:layout_below="@+id/txt_due"
                        android:layout_toRightOf="@+id/lll"
                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        >

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:backgroundTint="@color/black"
                            android:src="@drawable/rupee_black" />

                        <TextView
                            android:id="@+id/due_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:gravity="center"
                            android:text="36000"

                            android:textColor="@color/black"
                            android:textSize="16dp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/vv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/rel_due_pay"
                    android:background="@color/light_black"></View>

            </RelativeLayout>

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_below="@+id/goto_bokingdetails"
                android:rating="4"
                android:layout_marginTop="10dp"
                android:progressTint="@color/green"

                />
            <TextView
                android:id="@+id/txtnow"
                android:visibility="gone"
                android:layout_below="@+id/goto_bokingdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate_now"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="18sp"/>



        </RelativeLayout>



</android.support.v7.widget.CardView>