<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingBottom="10dp">
            <RelativeLayout
                android:id="@+id/goto_bokingdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/festive_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/festive_calender"
                android:textSize="15sp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marriage"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/red"
                />
            <TextView
                android:id="@+id/date_festive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jan_26_2018"
                android:layout_below="@+id/festive_calender"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand_bold"
                />
            <TextView
                android:id="@+id/event_house"
                android:layout_below="@+id/date_festive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_house"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand_bold"
                />
            <View
                android:id="@+id/single_view"
                android:layout_below="@+id/event_house"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_black"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_below="@+id/single_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_payment"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_bold"
                />
            <TextView
                android:id="@+id/total_payment"
                android:layout_below="@+id/single_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3600"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/paid"
                android:layout_below="@+id/total_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paid"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="13sp"
                android:textColor="@color/green"/>
            <View
                android:id="@+id/second_view"
                android:layout_below="@+id/paid"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_black"
                android:layout_marginTop="8dp"
                />
            </RelativeLayout>
            <TextView
                android:layout_below="@+id/goto_bokingdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate_now"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="18sp"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>