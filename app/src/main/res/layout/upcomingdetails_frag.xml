<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/tab_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:contentDescription="@string/todo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boking_details"
                android:textSize="20sp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/back"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/cell_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/call"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="9dp">
        <LinearLayout
            android:id="@+id/aa"

            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOKING ID : "
                android:fontFamily="@font/quicksand"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OWNDHFTW"
                android:fontFamily="@font/quicksand"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/booking_item_date"
            android:layout_marginTop="10dp">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organo Merner"
            android:layout_marginTop="16dp"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:textStyle="bold"
           android:fontFamily="@font/quicksand" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination Address"
            android:layout_marginTop="13dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sukanta Nagar, Bidhannagar,Serter IV,pin-700098"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand"
            android:textSize="17dp"
            android:text="Price Breakup"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/price_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
        </android.support.v7.widget.RecyclerView>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/price_recycler"
            android:background="@color/light_black"
android:layout_marginTop="10dp"            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15000"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Rs"
                android:textSize="18dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/rs"
              />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advance Payment"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/rs1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15000"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Rs"
                android:textSize="18dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/rs1"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:text="Due Payment"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rs2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/quicksand"
                android:text="15000"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/rs2"
                android:text="@string/Rs"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/anvd">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@color/white"

                android:fontFamily="@font/quicksand_bold"/>
            <ImageView
                android:layout_marginTop="1dp"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/down_arrow"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp">
            <include layout="@layout/upleftlayout"></include>

        </LinearLayout>




    </LinearLayout>
    </ScrollView>
</RelativeLayout>