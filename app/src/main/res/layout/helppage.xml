<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/tab_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/back_key"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textSize="22sp"
            android:textColor="#000000"
            android:fontFamily="@font/quicksand_bold"
            android:layout_toEndOf="@+id/back_key"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/help_text"
        android:layout_below="@+id/tab_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_you_have_any_query"
        android:textSize="18sp"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="#000000"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/edit_help"
        android:layout_below="@+id/help_text"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:inputType="textCapSentences|textMultiLine"
        android:background="@drawable/help_back"/>
    <Button
        android:layout_below="@+id/edit_help"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/send_caps"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:background="@color/red"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

</RelativeLayout>