<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cardviewservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        >
        <ImageView
            android:id="@+id/backpressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_4"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/backpressed"/>
        <RelativeLayout
            android:id="@+id/skip"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/skip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:text="@string/skip"/>

        </RelativeLayout>


    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/destinationadress"
        android:layout_below="@+id/cardviewservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination_address"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewaddress"
        android:layout_below="@+id/destinationadress"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/skip">
            <TextView
                android:id="@+id/localaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/kolkata_westbengal_delhi_fara"
                android:layout_centerVertical="true"
                android:padding="15dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/budget_text"
        android:layout_below="@+id/cardviewaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_preffered_budget"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/min_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_price"
        android:layout_below="@+id/budget_text"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/min_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20000"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@+id/min_price"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/max_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_price"
        android:fontFamily="@font/quicksand_bold"
        android:layout_below="@+id/budget_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/max_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70000"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@+id/max_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"/>

    <SeekBar
        android:id="@+id/seekbar_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/budget_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="20dp"
        android:thumb="@drawable/seekthumb"
        />
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@+id/seekbar_price"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:id="@+id/enter_amount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/or"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittextback"
        android:hint="@string/enter_amount_manually"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:fontFamily="@font/quicksand_bold"
        android:singleLine="true"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/explore"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="EXPLORE"
        android:textSize="18sp"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="#ffffff"
        android:background="@drawable/edittext_back_round"
        />



</RelativeLayout>