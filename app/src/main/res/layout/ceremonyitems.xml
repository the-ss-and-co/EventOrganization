<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:id="@+id/edt_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">
            <EditText
                android:id="@+id/equipment_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:background="@drawable/edit_text_oval"
                android:hint="item name"
                android:paddingStart="10dp"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".2">
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2">
            <EditText
                android:id="@+id/price_rent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Price"
                android:paddingStart="13dp"
                android:textSize="15sp"
                android:background="@drawable/edit_text_oval"
                tools:ignore="RtlSymmetry" />

        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3">

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
<!--android:layout_centerVertical="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:src="@drawable/ic_clear_black_24dp" />-->
        </RelativeLayout>



    </LinearLayout>
    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/edt_equipment"
        android:textColor="@color/black"
        android:fontFamily="@font/quicksand_bold"/>
    <CheckBox
        android:id="@+id/mednatory_vheckbox"
        android:layout_toRightOf="@+id/check_box"
        android:layout_below="@+id/edt_equipment"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mandotary"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:scaleX="0.90"
        android:scaleY="0.90"
        android:textSize="18dp"
        android:fontFamily="@font/quicksand_bold"
        android:background="@drawable/redborder"
        android:padding="8dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone"/>

</RelativeLayout>